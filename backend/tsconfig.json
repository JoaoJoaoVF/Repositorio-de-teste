{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": ["ESNext"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true, 
      "jsx": "react-jsx" 
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  